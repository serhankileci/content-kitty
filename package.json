{
	"name": "content-kitty",
	"version": "0.1.0",
	"homepage": "https://github.com/serhankileci/content-kitty",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/serhankileci/content-kitty.git"
	},
	"author": "Serhan Kileci <serhanselimkileci@gmail.com>",
	"keywords": [
		"cms",
		"headless cms"
	],
	"description": "Headless CMS for Node.js, written in TypeScript.",
	"bugs": {
		"url": "https://github.com/serhankileci/content-kitty/issues"
	},
	"directories": {
		"doc": "docs"
	},
	"type": "module",
	"license": "MIT",
	"main": "./build/index.js",
	"bin": {
		"content-kitty": "./build/util/cli.js"
	},
	"types": "./build/index.d.ts",
	"scripts": {
		"prepare": "husky install",
		"format": "prettier --check 'src/**/*.ts' || prettier --write 'src/**/*.ts'",
		"lint": "eslint . --ext .ts",
		"dev:pkg": "nodemon --watch src --ext 'ts' --exec 'tsc -p .'",
		"dev:test": "vitest --coverage",
		"test": "vitest --run --coverage",
		"build": "cross-env npm i && npm run format; npm run lint; tsc && cp -r ./src/server/assets ./build/server"
	},
	"dependencies": {
		"@prisma/client": "^4.15.0",
		"@types/bcrypt": "^5.0.0",
		"@types/compression": "^1.7.2",
		"@types/cookie-parser": "^1.4.3",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/express-session": "^1.17.7",
		"@types/morgan": "^1.9.4",
		"@types/node": "^18.13.0",
		"bcrypt": "^5.1.0",
		"chalk": "^5.3.0",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"execa": "^7.1.1",
		"express": "^4.18.2",
		"express-rate-limit": "^6.7.0",
		"express-session": "^1.17.3",
		"helmet": "^6.0.1",
		"morgan": "^1.10.0",
		"prisma": "^4.15.0",
		"utility-types": "^3.10.0"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.51.0",
		"@typescript-eslint/parser": "^5.51.0",
		"@vitest/coverage-istanbul": "^0.34.1",
		"eslint": "^8.57.0",
		"husky": "^8.0.3",
		"nodemon": "^3.1.0",
		"prettier": "^2.8.4",
		"typescript": "^5.4.3",
		"vitest": "^0.34.1"
	}
}
